{
    // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "type": "npm",
            "script": "test",
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            }
        },
        {
            "label": "Build concept2",
            "type": "shell",
            "command": "ng build --base-href=/esp-rowingmonitor/ --output-path=dist/esp-rowing-monitor-client/concept2/www",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            },
            "group": "build",
        },
        {
            "label": "Build kayakfirst",
            "type": "shell",
            "command": "ng build --output-path=dist/esp-rowing-monitor-client/kayakfirst/www && mkdir dist\\esp-rowing-monitor-client\\kayakfirstblue && xcopy .\\dist\\esp-rowing-monitor-client\\kayakfirst .\\dist\\esp-rowing-monitor-client\\kayakfirstblue /E",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "bundle generation complete"
                    }
                }
            },
            "group": "build",
        },
        {
            "label": "clear dist",
            "type": "shell",
            "command": "if exist .\\dist rmdir .\\dist /s /q"
        },
        {
            "label": "Build All",
            "type": "shell",
            "group": "build",
            "dependsOn": [
                "clear dist",
                "Build concept2",
                "Build kayakfirst"
            ],
            "dependsOrder": "sequence"
        }
    ]
}